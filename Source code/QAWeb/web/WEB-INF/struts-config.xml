<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">


<struts-config>
    <form-beans>
        <form-bean name="AdvanceSearchForm" type="uit.qass.formBean.AdvanceSearchForm"/>
        <form-bean name="searchActionForm" type="uit.qass.formBean.searchActionForm"/>
    </form-beans>
    
    <global-exceptions>
    
    </global-exceptions>

    <global-forwards>
        <forward name="welcome"  path="/Welcome.do"/>
    </global-forwards>

    <action-mappings>
        <!-- Advance Search -->
       
        <!-- end Advance Search -->
        <action input=".searchPage" name="searchActionForm" path="/search" scope="session" validate="true" type="uit.qass.action.searchAction">
            <forward name="success" path=".searchPage"/>
        </action>
        <action path="/showPubsByAuthor" type="uit.qass.action.showPubsByAuthorAction">
            <forward name="success" path=".pubsOfAuthorPage"/>
        </action>
        <action path="/showPubDetail" type="uit.qass.action.showPubDetailAction">
            <forward name="success" path=".pubsDetail"/>
        </action>
        <action input=".advanceSearchPage" name="AdvanceSearchForm" path="/loadParams" validate="false" scope="session" type="uit.qass.action.loadParamAction">
            <forward name="success" path=".advanceSearchPage"/>
            <forward name="load" path="/public/jsp/advanceSearchForm.jsp"/>
        </action>
        <action input=".advanceSearchPage" name="AdvanceSearchForm" path="/advanceSearch" scope="session" type="uit.qass.action.advanceSearchAction">
            <forward name="publication" path=".publications"/>
            <forward name="author" path=".authors"/>

        </action>
        
        <action path="/Welcome" forward=".qadb-1"/>
        <action path="/searchPage" forward=".searchPage"/>
        <action path="/advanceSearchPage" forward=".advanceSearchPage"/>
        <action path="/Locale" type="uit.qass.action.LanguageSelectAction" parameter="method" validate="false"/>
        <action path="/publicationList"
				parameter=".searchPage"
				type="org.apache.struts.actions.ForwardAction" />
    </action-mappings>
    
    <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>

    <message-resources parameter="com/myapp/struts/ApplicationResource"/>
    
    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />
        <set-property property="moduleAware" value="true" />
    </plug-in>
    
    <!-- ========================= Validator plugin ================================= -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property
            property="pathnames"
            value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"/>
    </plug-in>
  
</struts-config>
