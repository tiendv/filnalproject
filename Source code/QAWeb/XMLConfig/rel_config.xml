<?xml version="1.0" encoding="utf-8"?>

<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="config.xsd">
    <table table-alias="Publication">
        <table-name>dblp_pub_new</table-name>
        <field type="String" field-alias="author" visible="false" relation="related table">
            <relation>
                <relation-name>has author</relation-name>
                <relation-name>has writer</relation-name>
                <relation-name>has composer</relation-name>
                <relation-name>be write by</relation-name>
                <relation-name>be compose by</relation-name>
                <related-table>author</related-table>
                <mapping-table>pub_au</mapping-table>
            </relation>
        </field>
        
        <field type="String" field-alias="title" visible="true" relation="has attribute" presentation="true">
            <relation>
                <relation-name>has title</relation-name>
                <relation-name>has heading</relation-name>
            </relation>
            <field-name>title</field-name>
        </field>

        <field type="String" field-alias="publisher" visible="true" relation="has attribute">
            <relation>
                <relation-name>has publisher</relation-name>
                <relation-name>be publish by</relation-name>
                <relation-name>be release by</relation-name>
                <relation-name>for</relation-name>
                <reversed-relation>publish</reversed-relation>
                <reversed-relation>has publish</reversed-relation>
                <reversed-relation>release</reversed-relation>
                <reversed-relation>has release</reversed-relation>
            </relation>
            <field-name>publisher</field-name>
        </field>
        
        <field type="String" field-alias="source" visible="true" relation="has attribute">
            <relation>
                <relation-name>has source</relation-name>
                <relation-name>from</relation-name>
                <relation-name>in</relation-name>
                <relation-name>result</relation-name>
            </relation>
            <field-name>source</field-name>
        </field>
              
        <field type="Int" field-alias="year" visible="true" relation="has attribute">
            <relation>
                <relation-name>has year</relation-name>
                <relation-name>in</relation-name>
                <relation-name value="&gt;=">from</relation-name>
                <relation-name value="&lt;=">to</relation-name>
                <relation-name>be write in</relation-name>
            </relation>
            <field-name>year</field-name>
            <pattern>[0-9][0-9][0-9][0-9]</pattern>
        </field>

        <field type="Code" field-alias="isbn" visible="true" relation="has attribute">
            <relation>
                <relation-name>have</relation-name>
                <relation-name>has</relation-name>
            </relation>
            <field-name>isbn</field-name>
            <pattern></pattern>
        </field>

        <field type="Code" field-alias="doi" visible="true" relation="has attribute">
            <relation>
                <relation-name>have</relation-name>
                <relation-name>has</relation-name>
            </relation>
            <field-name>doi</field-name>
            <pattern></pattern>
        </field>
                      
        <field type="String" field-alias="publication" visible="false" relation="mapping table">
            <relation>
                <relation-name>refer to</relation-name>
                <relation-name>refer</relation-name>
                <related-table>cite to</related-table>
                <related-table>cite</related-table>
                <mapping-table>pub_and_pub</mapping-table>
                <related-table>publication</related-table>
            </relation>
        </field>
		
        <primary-key>id</primary-key>
        
    </table>

    <table table-alias="Author">
        <table-name>dblp_author_ref_new</table-name>

        <field type="String" field-alias="publication" visible="false" relation="related table">
            <relation>
                <relation-name>write</relation-name>
                <relation-name>has write</relation-name>
                <relation-name>has compose</relation-name>
                <related-table>publication</related-table>
                <mapping-table>au_pub</mapping-table>
            </relation>
        </field>

        <field type="String" field-alias="publisher" visible="false" relation="related table">
            <relation>
                <relation-name>write for</relation-name>
                <relation-name>cooperate</relation-name>
                <related-table>publication</related-table>
                <mapping-table>au_pub</mapping-table>
            </relation>
            <field-name>publisher</field-name>
        </field>
        <field type="String" field-alias="name" visible="true" relation="has attribute" presentation="true">
            <relation>
                <relation-name>has name</relation-name>

            </relation>
            <field-name>author</field-name>
        </field>
        <primary-key>author</primary-key>
    </table>

    <database-name>dblp</database-name>	    

    <mapping-table name="pub_and_pub">
        <table-key>dblp_key</table-key>
        <related-table-key>id</related-table-key>
        <mapping-table-name>dblp_ref_new</mapping-table-name>
    </mapping-table>

    <mapping-table name="pub_au">
        <table-key>pub_id</table-key>
        <related-table-key>author</related-table-key>
        <mapping-table-name>dblp_author_ref_new</mapping-table-name>
    </mapping-table>


    <mapping-table name="au_pub">
        <table-key>author</table-key>
        <related-table-key>pub_id</related-table-key>
        <mapping-table-name>dblp_author_ref_new</mapping-table-name>
    </mapping-table>

</database>

